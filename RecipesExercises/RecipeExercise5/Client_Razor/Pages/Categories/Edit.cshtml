@page
@model CategoriesEditModel
@{
    ViewData["Title"] = "Edit category";
}

<body background="/images/background.jpg" class="bg">
    <section class="text-center container">
        <h1 class="display-1 py-1">Edit Category</h1>
    </section>
    <div class="container bg-light col-xxl-6 px-4 py-5 shadow-lg">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="col-sm-12">
                    <label for="staticName" class="col-sm-2 col-form-label">Current name</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="staticName"
                            value="@Model.UpdatedCategory.Name">
                        <input type="hidden" name="id" value="@Model.UpdatedCategory.Id">
                    </div>
                </div>
                <div class="col-sm-12">
                    <label for="categoryName" class="form-label">New Category name</label>
                    <input type="text" id="categoryName" class="form-control" asp-for="@Model.UpdatedCategory.Name" />
                    <span asp-validation-for="@Model.UpdatedCategory.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center pt-4">
                <input type="submit" class="btn btn-dark" value="Update category">
                <a type="button" class="btn btn-outline-danger" asp-page="/Categories/List">Cancel</a>
            </div>
        </form>
    </div>
</body>

@section scripts{
<partial name="_ValidationScriptsPartial" />
}