@page
@model RecipesModel
@{
    ViewData["Title"] = "Recipes";
}

<section class="text-center container">
    <h1>Our Recipes</h1>
    <div class="row">
        @foreach (RecipesModel.GetAll() as recipe)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="{{recipe.Image}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{recipe.Name}}</h5>
                        <p class="card-text">{{recipe.Description}}</p>
                        <a href="{{recipe.Url}}" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>