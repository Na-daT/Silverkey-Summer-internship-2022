@page
@model CategoriesEditModel
@{
    ViewData["Title"] = "Edit category";
}

<section class="text-center container">
    <h1 class="display-1">Edit Category</h1>
</section>
<div class="container bg-light p-4">
    <div class="row g-5">
        <div class="col-md-7 col-lg-8">
            <form method="post">
                <div class="row g-3">
                    <div class="col-sm-12">
                        <label for="staticName" class="col-sm-2 col-form-label">Current name</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="staticName"
                                value="@Model.UpdatedCategory.Name">
                            <input type="hidden" name="id" value="@Model.UpdatedCategory.Id">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label for="categoryName" class="form-label">New Category name</label>
                        <input type="text" id="categoryName" class="form-control"
                            asp-for="@Model.UpdatedCategory.Name" />
                    </div>
                </div>
                <div class="py-2">
                    <input type="submit" class="btn btn-dark" value="Post">
                </div>
            </form>
        </div>
    </div>
</div>